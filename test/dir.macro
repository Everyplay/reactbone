var fs = require('fs');
module.exports = function (base, filepath, callback) {
  var result = "mocha.setup('bdd');\n";
  var files = fs.readdirSync(__dirname);
  files.forEach(function (file) {
    if (file.match(/\-spec\.js$/)) {
    result += '  require("./' + file.replace(/\.js$/, '') + '");\n';
  }
  });
  callback(null, result);
};
